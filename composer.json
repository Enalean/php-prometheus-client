{
    "name": "tgerbet/prometheus-client",
    "description": "Prometheus instrumentation library",
    "license": "Apache-2.0",
    "require": {
        "php": ">=7.2",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "^6.0",
        "php-http/curl-client": "^2.0",
        "php-http/mock-client": "^1.3",
        "phpunit/phpunit": "^8.1",
        "psalm/plugin-phpunit": "^0.6.0",
        "vimeo/psalm": "^3.3",
        "zendframework/zend-diactoros": "^2.1"
    },
    "suggest": {
        "ext-redis": "Required if using the Redis storage.",
        "ext-apcu": "Required if using the APCu storage."
    },
    "autoload": {
        "psr-4": {
            "Prometheus\\": "src/Prometheus/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\Prometheus\\": ["tests/unit/Prometheus/", "tests/functionnal/"]
        }
    },
    "config": {
        "sort-packages": true
    }
}
