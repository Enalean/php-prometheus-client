{
    "name": "tgerbet/prometheus-client",
    "description": "Prometheus instrumentation library",
    "license": "Apache-2.0",
    "require": {
        "php": ">=7.2",
        "guzzlehttp/guzzle": "^6.2"
    },
    "require-dev": {
        "doctrine/coding-standard": "^6.0",
        "phpunit/phpunit": "^8.1",
        "psalm/plugin-phpunit": "^0.5.8",
        "vimeo/psalm": "^3.2"
    },
    "suggest": {
        "ext-redis": "Required if using Redis.",
        "ext-apcu": "Required if using APCu."
    },
    "autoload": {
        "psr-4": {
            "Prometheus\\": "src/Prometheus/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\Prometheus\\": "tests/Test/Prometheus/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
